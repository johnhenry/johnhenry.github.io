---
// Settings
import {
        SITE_FAVICON,
        SITE_TITLE,
        TAG_MANAGER_ID,
        SITE_BASE_PATH,
        SITE_FAVICON_TYPE,
        SITE_SERVICE_WORKER} from '../SETTINGS.mjs';
// Components
import SEO from './SEO.astro';
import SiteStyles from "./SiteStyles.astro";
import SiteScripts from "./SiteScripts.astro";
import ServiceWorkerScript from "./ServiceWorkerScript.astro";
import externalStyles from '../external/styles.mjs';
import externalScripts from '../external/scripts.mjs';
import TagManagerHead from './TagManagerHead.astro';
// Content
const {
  title=SITE_TITLE,
  subtitle="",
  author,
  keywords,
  canonical,
  description} = Astro.props;
const displayTitle = subtitle? `${title} : ${subtitle}`: title;
---
<head>
  {TAG_MANAGER_ID ? <TagManagerHead tmid="{TAG_MANAGER_ID}" /> : ''}
  <SEO title={displayTitle} description={description} canonical={canonical} />
  <meta name="theme-color" content="#343233">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta charset="utf-8">
  <meta name="keywords" content={keywords}>
  <meta name="author" content={author}>
  <ServiceWorkerScript src={SITE_SERVICE_WORKER} />
  <link rel="manifest" href={`${SITE_BASE_PATH}manifest.json` }/>
  <link rel="icon" href={SITE_FAVICON} type={SITE_FAVICON_TYPE} />
  <SiteStyles hrefs={externalStyles} />
  <link rel="stylesheet" href={`${SITE_BASE_PATH}style/index.css`}/>
  <SiteScripts srcs={externalScripts} />
  <link rel="apple-touch-icon" sizes="512x512" href={`${SITE_BASE_PATH}image/iajh.512.png`} />
  <link rel="apple-touch-icon" sizes="384x384" href={`${SITE_BASE_PATH}image/iajh.384.png`} />
  <link rel="apple-touch-icon" sizes="256x256" href={`${SITE_BASE_PATH}image/iajh.256.png`} />
  <link rel="apple-touch-icon" sizes="192x192" href={`${SITE_BASE_PATH}image/iajh.192.png`} />
  <link rel="apple-touch-icon" sizes="128x128" href={`${SITE_BASE_PATH}image/iajh.128.png`} />
</head>