---
// Settings
// Components
import GenericHead from "./GenericHead.astro";
// Content
const {
  title,
  subtitle='',
  description, keywords, author, canonical, htmlClass, serviceWorkerScript, favicon, faviconType, tmid, manifest, externalStyles, externalScripts, webComponents, appleTouchIcons, metaOptions, lang="en" } = Astro.props;
---
<!DOCTYPE html>
<html lang={lang} class={htmlClass}>
  <GenericHead
    title={title}
    subtitle={subtitle}
    author={author}
    canonical={canonical}
    serviceWorkerScript={serviceWorkerScript}
    manifest={manifest}
    favicon={favicon}
    faviconType={faviconType}
    tmid={tmid}
    appleTouchIcons={appleTouchIcons}
    webComponents={webComponents}
    externalStyles={externalStyles}
    externalScripts={externalScripts}
    meta={{...metaOptions,
      description,
      keywords,
      author,}}>
  <slot name="head"></slot>
  </GenericHead>
  <slot></slot>
</html>