---
// Settings
// Components
import {SITE_TITLE, TAG_MANAGER_ID, SITE_FAVICON, SITE_FAVICON_TYPE, SITE_CANONICAL_URL, SITE_DESCRIPTION, SITE_KEYWORDS, SITE_AUTHOR} from "../SETTINGS.mjs";
import ClassCycler from './ClassCycler.astro';
import headerLinks from "../content/headerlinks.mjs";
// Content
import externalStyles from '../external/styles.mjs';
import externalScripts from '../external/scripts.mjs';
import webComponents from '../external/components.mjs';
import appleTouchIcons from '../external/apple-touch-icons.mjs';
import metaOptions from '../external/meta.mjs';
import GenericPage from "./GenericPage/index.astro";
import AppContainer from "./AppContainer.astro";
const { subtitle='', author=SITE_AUTHOR, headerClass, footerClass, tmid, canonical=SITE_CANONICAL_URL, description=SITE_DESCRIPTION,  keywords=SITE_KEYWORDS} = Astro.props;
const props = {
...Astro.props,
canonical,
description,
keywords,
author,
externalStyles,
externalScripts,
webComponents,
appleTouchIcons,
metaOptions,
title: SITE_TITLE,
favicon: SITE_FAVICON,
faviconType: SITE_FAVICON_TYPE,
tmid: TAG_MANAGER_ID,
headerLinks
}
---
<GenericPage {...props}>
  <ClassCycler slot="head"
    global="cycleTheme"
    storage-key="color-theme-preference"
    classes={[
    "color-theme-dark",
    "",
    "color-theme-light"]} />
  <ClassCycler slot="head"
    global="cycleMouseChaser"
    storage-key="mouse-chaser-preference"
    classes={[
    "",
    "mouse-chaser-logo",
    "mouse-chaser-coordinates"]} />
  <AppContainer
    headerClass={headerClass}
    footerClass={footerClass}
    title={SITE_TITLE}
    subtitle={subtitle}
    author={author}
    tmid={tmid}>
    <slot></slot>
  </AppContainer>
</GenericPage>
