---
// Settings
// Components
import {SITE_BASE_PATH} from "../SETTINGS.mjs";
import GDPRRequest from './GDPRRequest.astro';
import TagManagerBody from './GenericPage/TagManagerBody.astro';
import headerLinks from "../content/headerlinks.mjs";
// Content
const { title, subtitle, headerClass, footerClass, author, tmid} = Astro.props;
const headerLogo = `${SITE_BASE_PATH}image/iajh.png`;
---
<body class="color-theme-dark">
  <header class={headerClass}>
    <a href="/#" >{headerLogo && <img src={headerLogo} width="32" height="32" alt="logo" />}
    <p class="hide-n-show-landscape-inline">{title}{' '}{subtitle}</p></a>
    <nav class="hide show-landscape-flex">
      {headerLinks.map(({url, text}) => (
          <a href={`${url}`}>{text}</a>
        ))}
    </nav>
  </header>
  <!-- the good stuff -->
  <slot />
  <!-- the good stuff -->
  <span class="mouse-chaser" ></span>
  <footer class={footerClass}>
  <a href="#">Â© {new Date().getFullYear()}  {` ${author}`}</a>
    <!-- Todo: Astro whitespace may be fixed in Astro 0.21? -->
    <nav>
      <a href="#"
        class="mouse-chaser-toggler"
        onclick="event.preventDefault(),window.cycleMouseChaser()" title="Click to toggle mouse."></a>
      <a href="#"
        class="color-theme-toggler"
        onclick="event.preventDefault(),window.cycleTheme()"
        title="Click to toggle color theme."></a>
    </nav>
  </footer>
  {tmid && <GDPRRequest /> }
  {tmid && <TagManagerBody tmid={tmid} />}
</body>
